
<div class="show_resource">
  <h1><%= link_to(@resource.title, "http://#{@resource.link}") %></h1>

  <span class="creator"><%= @creator.first_name %> <%= @creator.last_name %></span>
  <% if @creator.id == current_user %>

  <small><%= link_to 'edit', edit_resource_path(@resource) %> |  <%= link_to 'delete' , resource_path(@resource), method: :delete, data: {confirm: 'Are you sure?'} %></small>
  <% end %>
  <div class="resource_description">
    <p>
      <%= @resource.description %>
    </p>
  </div>
  <div>
  <% for learning_style in LearningStyle.all %>
    <div><%= link_to "upvote", resource_upvote_path(@resource, :learning_style_id => learning_style.id), method: :post %></div>
    <div><strong><%= @resource.votes.where(learning_style_id: learning_style.id).sum(:value) %></strong></div>
    <div><%= link_to "downvote", resource_downvote_path(@resource, :learning_style_id => learning_style.id), method: :post%></div>
  <% end %>
  </div>
</div>
<div class="comments">
  <%= render 'comments/form' %>

  <%= render 'comments/comment' %>
</div>

