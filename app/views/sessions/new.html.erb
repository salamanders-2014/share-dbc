
<% if @errors %>
 <div class ="alert alert-error">Invalid username/password combination </div>
<% end %>

<%= form_for(:session, url: sessions_path) do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
    <p>
    <%= f.submit %>
  </p>
<% end %>
